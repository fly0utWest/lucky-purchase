generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  login     String   @unique
  name      String
  password  String
  avatar    String?
  createdAt DateTime @default(now())

  items Item[]
}

model Item {
  id          String   @id @default(uuid())
  title       String
  description String
  images      String[]

  userId String
  user   User   @relation(fields: [userId], references: [id])
}
